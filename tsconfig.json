{
	"compilerOptions": {
		"outDir": "./build",
		"allowJs": true,
		"module": "ESNext",
		"target": "ES2020",
		"strict": true,
		"noImplicitReturns": true,
		"noImplicitAny": true,
		"noFallthroughCasesInSwitch": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"moduleResolution": "node"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "build", "test", "*.config.ts"]
}
